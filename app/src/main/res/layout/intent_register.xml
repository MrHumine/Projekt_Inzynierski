<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/toolbar_menu"
        layout="@layout/toolbar_only_sett"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar_menu">

        <EditText
            android:id="@+id/register_email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="Enter email"
            android:inputType="text" />
        <TextView
            android:id="@+id/text_view_register_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"></TextView>


        <EditText
            android:id="@+id/register_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Enter password"
            android:inputType="textPassword" />
        <TextView
            android:id="@+id/text_view_register_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"></TextView>


        <EditText
            android:id="@+id/register_re_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Repeat password"
            android:inputType="textPassword" />
        <TextView
            android:id="@+id/text_view_register_re_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"></TextView>


        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:onClick="registerUser"
            android:text="Register" />
        <TextView
            android:id="@+id/text_view_register_under_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"></TextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>