<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewError"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:visibility="gone"
                                android:textColor="@color/red"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:boxBackgroundMode="outline">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/text_input_add_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Imie/pseudomin"
                                    android:maxLines="3"
                                    android:ellipsize="end"
                                    android:inputType="textMultiLine"
                                    android:scrollbars="vertical"
                                    app:cardElevation="10dp"
                                    app:cardCornerRadius="8dp"
                                    app:boxBackgroundMode="outline"
                                    app:boxStrokeColor="?attr/colorSecondary"/>
                            </com.google.android.material.textfield.TextInputLayout>
                                <ImageView
                                    android:id="@+id/image_view_name"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/baseline_audiotrack_24"
                                    android:padding="8dp">
                                </ImageView>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="10dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:boxBackgroundMode="outline">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/text_input_add_localization"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Skąd się znamy"
                                    android:maxLines="3"
                                    android:ellipsize="end"
                                    android:inputType="textMultiLine"
                                    android:scrollbars="vertical"
                                    app:boxBackgroundMode="outline"
                                    app:boxStrokeColor="?attr/colorSecondary"/>

                            </com.google.android.material.textfield.TextInputLayout>
                                <ImageView
                                    android:id="@+id/image_view_localization"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/baseline_audiotrack_24"
                                    android:padding="8dp">
                                </ImageView>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Charakter"
                                android:textStyle="bold"
                                android:layout_margin="10dp"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:boxBackgroundMode="outline">>

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/text_input_add_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Charakter"
                                    android:maxLines="3"
                                    android:ellipsize="end"
                                    android:inputType="textMultiLine"
                                    android:scrollbars="vertical"
                                    app:cardElevation="10dp"
                                    app:cardCornerRadius="8dp"
                                    app:boxBackgroundMode="outline"
                                    app:boxStrokeColor="?attr/colorSecondary"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <ImageView
                                android:id="@+id/image_view_description"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/baseline_audiotrack_24"
                                android:padding="8dp">
                            </ImageView>
            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Wygląd"
                                android:layout_margin="10dp"
                                android:textStyle="bold"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:boxBackgroundMode="outline">>

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/text_input_add_hair"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Kolor włosow"
                                    android:maxLines="3"
                                    android:ellipsize="end"
                                    android:inputType="textMultiLine"
                                    android:scrollbars="vertical"
                                    app:cardElevation="10dp"
                                    app:cardCornerRadius="8dp"
                                    app:boxBackgroundMode="outline"
                                    app:boxStrokeColor="?attr/colorSecondary"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <ImageView
                                android:id="@+id/image_view_hair"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/baseline_audiotrack_24"
                                android:padding="8dp">
                            </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:boxBackgroundMode="outline">>

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/text_input_add_eyes"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Kolor oczu"
                                    android:layout_margin="10dp"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <ImageView
                                android:id="@+id/image_view_eyes"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/baseline_audiotrack_24"
                                android:padding="8dp">
                            </ImageView>

            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:boxBackgroundMode="outline">>

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/text_input_skin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Odcień skóry"
                                    android:layout_margin="10dp"/>

                            </com.google.android.material.textfield.TextInputLayout>
                            <ImageView
                                android:id="@+id/image_view_skin"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/baseline_audiotrack_24"
                                android:padding="8dp">
                            </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:boxBackgroundMode="outline">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/text_input_height"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Wzrost"
                                    android:layout_margin="10dp"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <ImageView
                                android:id="@+id/image_view_height"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/baseline_audiotrack_24"
                                android:padding="8dp">
                            </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:boxBackgroundMode="outline">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/text_input_body"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Sylwetka"
                                    android:layout_margin="10dp"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <ImageView
                                android:id="@+id/image_view_body"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/baseline_audiotrack_24"
                                android:padding="8dp">
                            </ImageView>

            </LinearLayout>
                    </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/button_add_description_creating_new_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zapisz"
            android:layout_margin="10dp"
            android:textColor="?attr/colorSecondary"
            android:color="?attr/colorPrimaryVariant"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>